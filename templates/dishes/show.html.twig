{% extends 'base.html.twig' %}

{% block title %}Dishes{% endblock %}

{% block body %}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        text-align: left;
        border: 1px solid #000;
    }

    .table thead th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .table tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }
</style>
    <h1>Блюда</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>Название блюда</th>
                <td>{{ dish.dname }}</td>
            </tr>
            <tr>
                <th>Цена</th>
                <td>{{ dish.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dishes_index') }}">Назад</a>

    <a href="{{ path('app_dishes_edit', {'id': dish.id}) }}">Изменить</a>

    {{ include('dishes/_delete_form.html.twig') }}
{% endblock %}
